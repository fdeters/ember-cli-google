    <div>Longitude: <Input @value={{lngInput}} /></div>
  </div>


  {{#if showDirections}}
    <button type="button" {{action (mut showDirections) false}}>Hide Directions</button>
  {{else}}
    <button type="button" {{action (mut showDirections) true}}>Show Directions</button>
  {{/if}}
</div>

