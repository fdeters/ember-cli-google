<div class="map-controls">
  <div class="map-controls--location">
    <div>Latitude: <Input @value={{this.latInput}} /></div>
    <div>Longitude: <Input @value={{this.lngInput}} /></div>
  </div>

  {{#if this.showDirections}}
    <button type="button" {{action (mut this.showDirections) false}}>Hide Directions</button>
  {{else}}
    <button type="button" {{action (mut this.showDirections) true}}>Show Directions</button>
  {{/if}}
</div>

<GMap @center={{hash lat=this.lat lng=this.lng}} @zoom={{13}} {{on "GMarker:click" this.click}}>
  <GMarker @position={{hash lat=37.774546 lng=-122.433523}} @clickable={{false}} />
  <GCircle @center={{hash lat=37.774546 lng=-122.433523}} @radius={{1000}} />

  {{!-- Coachella, CA --}}
  <GRectangle @bounds={{hash north=33.685 south=33.671 east=-116.234 west=-116.251}} />

  <!-- GCustomMarker @position={{hash lat=lat lng=lng}} @truck={{truck}} / -->

  <GHeatmapLayer @data={{this.heatMapData}} />

  <GDirections @origin={{hash lat=37.774546 lng=-122.433523}}
               @show={{this.showDirections}}
               @destination="San Jose, CA"
               @draggable="true" />
</GMap>