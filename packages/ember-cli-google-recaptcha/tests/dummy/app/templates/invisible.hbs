<p><LinkTo @route="index">Back to index</LinkTo></p>

<GRecaptchaInvisible @verified={{this.verified}}
                     @expired={{this.expired}}
                     @reset={{this.reset}}
                     @execute={{this.execute}} />

{{#if this.response}}
  <p>Response: {{this.response}}</p>
  <p><button {{on "click" this.resetRecaptcha}}>Reset</button></p>

  {{#if this.isExpired}}
    <p>The response has expired.</p>
  {{/if}}
{{/if}}
